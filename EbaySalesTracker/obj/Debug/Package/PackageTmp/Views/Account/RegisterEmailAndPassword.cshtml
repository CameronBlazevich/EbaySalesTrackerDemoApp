
@model EbaySalesTracker.Models.RegisterViewModel
@{
    ViewBag.Title = "Register - eProfitTracker";
}

<div class="panel">
    <div class="panel-body">
        <div class="row">
            <div class="registration-pitch"></div>
            <div class="clearfix"></div>
            <hr />
        </div>
        <div class="row">
            <div class="col-md-8">
               
            </div>
        </div>
    </div>
</div>

<div id="register-email-password" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Subscribe our Newsletter</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    @if (Request.IsAuthenticated && !Model.HasConfirmedEmail)
                    {
                        @Html.Partial("Info")
                    }
                    else if (Request.IsAuthenticated)
                    {
                        <p>Thanks for confirming your email. Please Sign In</p>

                    }
                    else
                    {
                        @Html.Partial("_RegisterPartial");
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
         if (!Request.IsAuthenticated)
             {
                $('#register-email-password').modal('show');
             }
         });

    function registerUser() {
        console.log($('#register-email-password-form').serialize());
    }

</script>
