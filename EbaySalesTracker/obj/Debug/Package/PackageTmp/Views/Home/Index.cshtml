@using EbaySalesTracker.Models
@{
    Layout = null;
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Landing Page</title>
    <!-- jQuery -->
    <script src="~/Scripts/Libs/jquery-2.2.3.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/Libs/bootstrap.min.js"></script>

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/landing-page.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">


</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top  topnav" role="navigation">
        <div class="container topnav">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("eBay Profit Tracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @if (!Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                    else
                    {                      
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Listings", "Index", "Listings")</li>
                        <li>@Html.ActionLink("Products", "Index", "InventoryItems")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Modal -->
    <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header row">
                    <div class="col-md-10">
                        <h2 class="modal-title" id="exampleModalLabel">Sign In</h2>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
                <div class="modal-body">
                    @Html.Partial("_LoginPartial_UsernamePassword")
                </div>               
            </div>
        </div>
    </div>

    <!-- Header -->
    <a name="about"></a>
    <div class="intro-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">

                        <h1>eBay Profit Tracker</h1>
                        <h3>Automated tracking of eBay sales and expenses</h3>
                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            <li>
                                <a href=@Url.Action("Register", "Account") class="btn btn-default btn-lg"><i class="fa fa-user fa-fw"></i><span class="network-name">Register</span></a>
                            </li>
                            <li>                           
                                <a href="#" data-toggle="modal" data-target="#login-modal" class="btn btn-default btn-lg"><i class="fa fa-play-circle fa-fw"></i><span class="network-name">Sign-In</span></a>
                            </li>
                            <li>
                                <a href=@Url.Action("Login", "Account") class="btn btn-default btn-lg"><i class="fa fa-play-circle fa-fw"></i><span class="network-name">Demo</span></a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->
    <!-- Page Content -->

    <a name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Ditch that spreadsheet!</h2>
                    <p class="lead">We integrate directly with eBay so you don't have to. Stop tracking your sales through an archaic system of interconnected spreadsheets. Get all of your listing and sales history complete with fees and inventory cost in one, convenient, easy to use location.</p>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <img class="img-responsive" src="img/ipad.png" alt="">
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-a -->

    <div class="content-section-b">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Advanced fee tracking</h2>
                    <p class="lead">No more estimating fees based on category and final sale price! We get your real fee information directly from eBay.  Included is the ability to drill down into specific listings and fees so you can more accurately quantify your expenses.</p>
                </div>
                <div class="col-lg-5 col-sm-pull-6  col-sm-6">
                    <img class="img-responsive" src="img/dog.png" alt="">
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-b -->

    <div class="content-section-a">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Inventory-centric analytics<br>on seller performance</h2>
                    <p class="lead">Associate your listings to inventory items to gain insight into you best and worst performing items to make educated decisions on where to invest and when to discontinue products.</p>
                    @*<p class="lead">Interactable dashboard to display pricing trends including sales price trends by inventory item, etc. Ability to track a sellers inventory, know when to reorder, see real sales and profit numbers to make educated decsisions on discontinuing products.</p>*@
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <img class="img-responsive" src="img/phones.png" alt="">
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-a -->

    <a name="contact"></a>
    <div class="banner">

        <div class="container">

            <div class="row">
                <div class="col-lg-6">
                    <h2>Get started today!</h2>
                </div>
                <div class="col-lg-6">
                    <ul class="list-inline banner-social-buttons">
                        <li>
                            <a href=@Url.Action("Register", "Account") class="btn btn-default btn-lg"><i class="fa fa-user fa-fw"></i><span class="network-name">Register</span></a>
                        </li>
                        <li>
                            <a href="#" data-toggle="modal" data-target="#login-modal" class="btn btn-default btn-lg"><i class="fa fa-play-circle fa-fw"></i><span class="network-name">Sign-In</span></a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.banner -->
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-inline">
                    </ul>
                    <p class="copyright text-muted small">Copyright &copy; eBayProfitTracker 2016. All Rights Reserved</p>
                </div>
            </div>
        </div>
    </footer>


</body>

</html>
