
@using Microsoft.AspNet.Identity

@model EbaySalesTracker.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="panel" style="max-width:1200px; margin-left:auto; margin-right:auto;">
        <div class="panel-body">
            <div class="row">
                <div class="registration-pitch">
                </div>
                <div class="clearfix"></div>
                <hr />
            </div>
            <div class="row">
                @{ if (!Request.IsAuthenticated)
                    {
                        <div class="col-md-6">
                            <h3>Step 1: Register with us:</h3>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                                <div class="col-md-8">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                                <div class="col-md-8">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-8 col-md-3">
                                    <input type="submit" class="btn btn-primary" value="Register" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 greyed-out">
                            <div>
                                <h3>Step 2: Authenticate with eBay:</h3>
                            </div>
                            <div class="clearfix"></div>
                            <p>The following button will take you to eBay where you will log in and be asked to give our app permission to import your data from eBay.</p>
                            <a href="#" class="btn btn-primary disabled">Authenticate</a>
                            <div class="clearfix"></div>
                            <h3>Step 3: Import your eBay listings</h3>
                            <p>Once authenticated, you're one click away from importing all of your listing information.</p>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-6 greyed-out">
                            <h3>Step 1: Register with us:</h3>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                                <div class="col-md-8">
                                    <input readonly style="width:270px; color:lightgray" value=@User.Identity.GetUserName()>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-8 col-md-3">
                                    <input type="submit" class="btn btn-primary disabled" value="Register" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div>
                                <h3>Step 2: Authenticate with eBay:</h3>
                            </div>
                            <div class="clearfix"></div>
                            <p>The following button will take you to eBay where you will log in and be asked to give our app permission to import your data from eBay.</p>
                            <a href="@Url.Action("AuthenticateUserWithEbay","Account", new { target = "_new" })" class="btn btn-primary">Authenticate</a>
                            <div class="clearfix"></div>
                            <h3>Step 3: We'll take it from here!</h3>
                            <p>Once authenticated, we automatically import your listing information, and you can get started right away.</p>
                        </div>
                    }
                }
                
            </div>
        </div>
    </div>
                    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    

</script>