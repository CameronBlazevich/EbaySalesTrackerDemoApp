@model IEnumerable<EbaySalesTracker.Models.InventoryItem>

@{
    ViewBag.Title = "Inventory Items";
}

<div class="panel" style="margin-top:10px">
    <div class="panel-heading text-right">
        <h3 class="pull-left">Inventory Items</h3>
        @*@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })*@
        <a href="#" data-toggle="modal" data-target="#create-inventory-item" class="btn btn-primary">Create New</a>
    </div>
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuantitySold)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AverageSalesPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AverageProfit)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuantitySold)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AverageSalesPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AverageProfit)
                    </td>
                    <td>
                        <a href="#" data-toggle="modal" data-target="#create-inventory-item" class="">Edit</a> |
                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
        </div>

    <!-- Create Modal -->
<div class="modal fade" id="create-inventory-item" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header row">
                <div class="col-md-10">
                    <h2 class="modal-title" id="exampleModalLabel">Create New Item</h2>
                </div>
                <div class="col-md-2">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <div class="modal-body">
                @Html.Partial("_CreateInventoryItem", new EbaySalesTracker.Models.InventoryItem())
            </div>
        </div>
    </div>
</div>

    <!-- Edit Modal -->
<div class="modal fade" id="edit-inventory-item" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header row">
                <div class="col-md-10">
                    <h2 class="modal-title" id="exampleModalLabel">Edit Item</h2>
                </div>
                <div class="col-md-2">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <div class="modal-body">
                @Html.Partial("_EditInventoryItem")
            </div>
        </div>
    </div>
</div>


