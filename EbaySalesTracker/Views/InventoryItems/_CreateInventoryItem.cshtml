@model EbaySalesTracker.Models.InventoryItem

@using (Html.BeginForm("Create","InventoryItems", new {ParentPage = ViewBag.Title }, FormMethod.Post, new {id="CreateInventoryItemForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control  text-input-validation" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger", id="Description-error" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cost, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger", id="cost-error" })
            </div>
        </div>
        
    </div>
}

